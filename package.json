{
	"name": "spicyroll",
	"description": "Stream your favorite animes in a super legal fashion!",
	"version": "3.0.0",
	"homepage": "https://spicyroll.panties.moe",
	"license": "WTFPL",
	"author": {
		"name": "Zoey",
		"url": "https://panties.moe",
		"email": "zoey@panties.moe"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/NotZoeyDev/Spicyroll.git"
	},
	"main": "src/app.js",
	"devDependencies": {
		"electron-prebuilt-compile": "4.0.0",
		"electron-builder": "^20.38.5"
	},
	"dependencies": {
		"@ffmpeg-installer/ffmpeg": "^1.0.17",
		"cheerio": "^1.0.0-rc.2",
		"electron-compile": "^6.4.4",
		"electron-squirrel-startup": "^1.0.0",
		"request": "^2.88.0",
		"vue": "^2.6.7",
		"vueify": "^9.4.1",
		"webtorrent": "^0.103.0"
	},
	"scripts": {
		"start": "electron . DEBUG",
		"pack": "electron-builder --dir",
		"dist": "electron-builder"
	},
	"build": {
		"appId": "moe.panties.spicyroll",
		"productName": "Spicyroll",
		"mac": {
			"category": "public.app-category.video",
			"icon": "src/assets/icon.icns",
			"target": [
				{
					"target": "dmg",
					"arch": [
						"x64"
					]
				},
				{
					"target": "zip",
					"arch": [
						"x64"
					]
				}
			]
		},
		"win": {
			"icon": "src/assets/icon.ico",
			"target": [
				{
					"target": "nsis",
					"arch": [
						"x64"
					]
				},
				{
					"target": "zip",
					"arch": [
						"x64"
					]
				}
			]
		},
		"linux": {
			"icon": "src/assets/icon.png",
			"category": "Video",
			"target": [
				{
					"target": "AppImage",
					"arch": [
						"x64"
					]
				},
				{
					"target": "zip",
					"arch": [
						"x64"
					]
				}
			]
		}
	}
}
